{
    "name": "Founders",
    "description": "a bunch of things you'd use while at Founders",
    "version": "0.10",
    "manifest_version": 2,
    "homepage_url": "http://atfounders.com",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "img/icons/toolbar.png",
        "default_title": "Founders"
    },
    "icons": {
        "128": "img/icons/128.png",
        "64":  "img/icons/64.png",
        "32":  "img/icons/32.png",
        "24":  "img/icons/24.png",
        "16":  "img/icons/16.png"
    },
    "options_page": "options.html",
    "background": {
        "scripts": [
            "js/init.js",
            "js/vendor/jquery-1.8.1.js"
        ]
    },
    "content_security_policy": "default-src 'none'; style-src 'self' 'unsafe-inline'; connect-src *; img-src *; script-src 'self';",
    "permissions": [
        "unlimitedStorage",
        "notifications",
        "tabs",
        "geolocation",
        "chrome://favicon/*"
    ]
}